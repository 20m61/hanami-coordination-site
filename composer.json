{
    "name": "hanami/coordination-site",
    "description": "複数の花見イベントを作成・管理し、参加者間の調整を容易にするウェブアプリケーション",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Hanami Team",
            "email": "contact@example.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "pusher/pusher-php-server": "^7.2",
        "monolog/monolog": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Hanami\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hanami\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs"
    }
}
